<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="playlistVideo">

    <resultMap id="playlistVideoResultMap" type="com.example.music.model.PlaylistVideo">
        <result property="playlistId" column="playlist_id"/>
        <result property="videoId" column="video_id"/>
    </resultMap>

    <insert id="insert">
        INSERT INTO playlist_videos (playlist_id, video_id)
        VALUES (#{playlistId}, #{videoId})
    </insert>

    <select id="getVideosByPlaylistId" resultType="String">
        SELECT video_id FROM playlist_videos WHERE playlist_id = #{playlistId}
    </select>
</mapper>