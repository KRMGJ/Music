<configuration>
	<!-- HikariCP 전부 차단 -->
	<logger name="com.zaxxer.hikari" level="OFF" />
	<logger name="com.zaxxer.hikari.HikariConfig" level="OFF" />
	<logger name="com.zaxxer.hikari.pool" level="OFF" />
	<logger name="com.zaxxer.hikari.pool.HikariPool" level="OFF" />

	<!-- 필요시 다른 패키지 레벨 -->
	<logger name="org.hibernate" level="ERROR" />
	<logger name="org.springframework.web" level="DEBUG" />
	<logger name="org.springframework.security" level="DEBUG" />
	<logger name="org.springframework.transaction" level="DEBUG" />
	<logger name="org.springframework.jdbc" level="DEBUG" />
	<logger name="org.springframework.context" level="DEBUG" />
	<logger name="org.springframework.beans" level="DEBUG" />
	<logger name="org.springframework.core" level="DEBUG" />
	<logger name="com.example.music" level="DEBUG" />

	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>

	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
</configuration>
